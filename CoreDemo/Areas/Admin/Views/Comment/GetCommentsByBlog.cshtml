@{
    ViewBag.Title = "Yorumlar ";
    Layout = "_AdminLayout";

    string ShrinkMessageDetail(string messageDetail)
    {
        return messageDetail.Length < 15 ? messageDetail : messageDetail.Substring(0, 15) + "...";
    }
}

