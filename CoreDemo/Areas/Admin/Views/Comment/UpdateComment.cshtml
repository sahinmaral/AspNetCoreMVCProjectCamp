@model UpdateCommentViewModel

@{
    ViewBag.Title = @ViewLocalizer["Title"];
    Layout = "_AdminLayout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title" style="margin-bottom:3em">@ViewLocalizer["Title"]</h3>
            <form 
                asp-controller="@nameof(CoreDemo.Areas.Admin.Controllers.CommentController).Replace("Controller","")"
                  asp-area="@nameof(CoreDemo.Areas.Admin)"
                  asp-action="@nameof(CoreDemo.Areas.Admin.Controllers.CommentController.UpdateComment)"
                  method="post">
                <input asp-for="Id" value="@Model.Id" type="hidden" />
                <input asp-for="BlogId" value="@Model.BlogId" type="hidden" />

                <div class="form-group">
                    <label>@ViewLocalizer["BlogTitle"]</label>
                    <input type="text" asp-for="BlogTitle" class="form-control" disabled="disabled"/>
                </div>

                <div class="form-group">
                    <label asp-for="Detail">@ViewLocalizer["Comment"]</label>
                    <textarea class="form-control" rows="4" asp-for="Detail"></textarea>
                    <span asp-validation-for="Detail" class="validation-span"></span>
                </div>

                <button type="submit" class="btn btn-gradient-primary mr-2" style="height:50px">@ViewLocalizer["Submit"]</button>
                <button type="reset" class="btn btn-gradient-primary mr-2" style="height:50px">@ViewLocalizer["Discard"]</button>
            </form>
        </div>
    </div>
</div>

