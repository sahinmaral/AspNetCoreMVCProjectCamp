@model CoreDemo.Areas.Admin.Models.UpdateCommentViewModel

@{
    ViewBag.Title = "Yorum Duzenleme ";
    Layout = "_AdminLayout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title" style="margin-bottom:3em">Yorum Duzenleme</h3>
            @using (Html.BeginForm("UpdateComment", "Comment", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.CommentId)
                @Html.HiddenFor(x => x.BlogId)

                <div class="form-group">
                    <label>Baslik</label>
                    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control", style = "border:1px solid black", disabled = true })
                </div>

                <div class="form-group">
                    <label>Yorum</label>
                    @Html.TextAreaFor(x => x.CommentAbout, new { @class = "form-control", style = "border:1px solid black", placeholder = "Yorum", rows = "4" })
                    @Html.ValidationMessageFor(x => x.CommentAbout, "", new { style = "color:darkred" })
                </div>

                <button type="submit" class="btn btn-gradient-primary mr-2 w-100" style="height:50px">Guncelle</button>
            }
        </div>
    </div>
</div>

