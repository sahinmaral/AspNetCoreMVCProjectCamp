@model ReadContactViewModel

@{
    ViewData["Title"] = ViewLocalizer["Title"];
    Layout = "_AdminLayout";
}

<h2 class="card-title ml-3">@ViewLocalizer["FormTitle",Model.NameSurname]</h2>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">


            <div class="form-group">
                <label asp-for="NameSurname">@ViewLocalizer["NameSurname"]</label>
                <input type="text" disabled="disabled" asp-for="NameSurname" class="form-control">
            </div>

            <div class="form-group">
                <label asp-for="Email">@ViewLocalizer["Email"]</label>
                <input type="text" disabled="disabled" asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Subject">@ViewLocalizer["Subject"]</label>
                <input type="text" disabled="disabled" asp-for="Subject" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Message">@ViewLocalizer["Message"]</label>
                <textarea disabled="disabled" asp-for="Message" class="ckeditor" rows="200"></textarea>
            </div>

            <a class="btn btn-secondary" href="/@nameof(CoreDemo.Areas.Admin)/@nameof(CoreDemo.Areas.Admin.Controllers.ContactController).Replace("Controller","")/@nameof(CoreDemo.Areas.Admin.Controllers.ContactController.GetContacts)">@ViewLocalizer["GoBack"]</a>
            <a class="btn btn-primary" href="/@nameof(CoreDemo.Areas.Admin)/@nameof(CoreDemo.Areas.Admin.Controllers.ContactController).Replace("Controller","")/@nameof(CoreDemo.Areas.Admin.Controllers.ContactController.RespondContactedUser)/@Model.Id">@ViewLocalizer["RespondContactedUser"]</a>

        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        CKEDITOR.replace('ContactMessage');

    });
</script>

