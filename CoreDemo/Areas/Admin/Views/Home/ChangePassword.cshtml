@model UserPasswordViewModel

@{
    ViewBag.Title = ViewLocalizer["Title"];
    Layout = "_AdminLayout";
}

<h1 class="card-title ml-3">@ViewLocalizer["Title"]</h1>

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form asp-area="@nameof(CoreDemo.Areas.Admin)"
                  asp-action="@nameof(CoreDemo.Areas.Admin.Controllers.HomeController.ChangePassword)"
                  asp-controller="@nameof(CoreDemo.Areas.Admin.Controllers.HomeController).Replace("Controller","")"
                  method="post">
                <div class="form-group">
                    <label for="exampleTextarea1">@ViewLocalizer["NewPassword"]</label>
                    <input type="password" asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="validation-span"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword">@ViewLocalizer["ConfirmNewPassword"]</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="validation-span"></span>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">@ViewLocalizer["Submit"]</button>
                <button type="reset" class="btn btn-gradient-primary mr-2">@ViewLocalizer["Discard"]</button>
            </form>
        </div>
    </div>
</div>
