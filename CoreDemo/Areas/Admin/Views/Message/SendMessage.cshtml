@model CreateMessageViewModel

@{
    ViewBag.Title = ViewLocalizer["Title"];
    Layout = "_AdminLayout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title" style="margin-bottom:3em">@ViewLocalizer["FormTitle",Model.Sender.Username]</h3>
            <form asp-action="SendMessage" asp-area="Admin" asp-controller="Message" method="post">

                <input type="hidden" asp-for=Receiver.UserId value="@Model.Receiver.UserId" name="Receiver.UserId"/>
                <input type="hidden" asp-for=Sender.UserId value="@Model.Sender.UserId" name="Sender.UserId" />

                <div class="form-group">
                    <label asp-for="Receiver.Username">@ViewLocalizer["Sender"]</label>
                    <input type="text" asp-for="Receiver.Username" class="form-control" style="border:1px solid black" name="Receiver.Username" disabled="disabled">
                </div>

                <div class="form-group">
                    <label asp-for="MessageSubject">@ViewLocalizer["Subject"]</label>
                    <input type="text" asp-for="MessageSubject" class="form-control" style="border:1px solid black" name="MessageSubject" />
                    <span asp-validation-for="MessageSubject" style="color:darkred"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MessageDetail">@ViewLocalizer["Content"]</label>
                    <textarea asp-for="MessageDetail" class="form-control" style="border:1px solid black" name="MessageDetail"></textarea>
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">@ViewLocalizer["Submit"]</button>
            </form>
        </div>
    </div>
</div>

