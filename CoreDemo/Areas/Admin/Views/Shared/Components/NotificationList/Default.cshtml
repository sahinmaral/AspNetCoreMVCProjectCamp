
@using Microsoft.AspNetCore.Builder
@model List<ReadNotificationViewModel>

@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    var culture = Context.Features.Get<IRequestCultureFeature>();
}

<a class="dropdown-toggle count-info" data-toggle="dropdown" href="#" id="notificationDropdown">
    <i class="mdi mdi-bell-outline mdi-18px"></i>  @if (@Model.Count > 0)
    {
        <span class="label label-warning">@Model.Count</span>
    }
</a>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <h6 class="p-3 mb-0" style="font-weight:bold; font-size:15px;">@ViewLocalizer["Notifications"]</h6>


    @foreach (ReadNotificationViewModel notification in Model)
    {
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <div class="preview-icon @notification.NotificationType.Name">
                    <i class="@notification.NotificationSymbol.Name"></i>
                </div>
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject font-weight-normal mb-1">@notification.NotificationInformations.First(x=>x.Language.ShortName == culture.RequestCulture.UICulture.Name).Header</h6>
                <p class="text-gray ellipsis mb-0">@notification.NotificationInformations.First(x=>x.Language.ShortName == culture.RequestCulture.UICulture.Name).Detail</p>
            </div>
        </a>
    }

    <div class="dropdown-divider"></div>
    <h6 class="p-3 mb-0 text-center">
        <a style="text-decoration: none; color:black; font-weight:bold" href="#">
            See All Notifications
        </a>
    </h6>
</div>