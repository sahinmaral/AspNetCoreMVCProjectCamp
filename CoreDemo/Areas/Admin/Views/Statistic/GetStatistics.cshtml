@model CoreDemo.Models.ReadStatisticsViewModel

@{
    ViewBag.Title = "İstatistikler | ";
    Layout = "_AdminLayout";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-3">
            <div class="widget style1">
                <div class="row">
                    <div class="col-4 text-center">
                        <i class="fa fa-rss fa-5x"></i>
                    </div>
                    <div class="col-8 text-right">
                        <span> Toplam Blog Sayısı </span>
                        <h2 class="font-bold">@Model.TotalBlogCount</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget style1 navy-bg">
                <div class="row">
                    <div class="col-4">
                        <i class="fa fa-comment fa-5x"></i>
                    </div>
                    <div class="col-8 text-right">
                        <span>Toplam Yorum Sayısı</span>
                        <h2 class="font-bold">@Model.TotalCommentCount</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget style1 lazur-bg">
                <div class="row">
                    <div class="col-4">
                        <i class="fa fa-envelope-o fa-5x"></i>
                    </div>
                    <div class="col-8 text-right">
                        <span>Yeni Gelen Mesaj Sayısı</span>
                        <h2 class="font-bold">@Model.NewMessageCount</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget style1 yellow-bg">
                <div class="row">
                    <div class="col-4">
                        <i class="fa fa-user fa-5x"></i>
                    </div>
                    <div class="col-8 text-right">
                        <span> Yeni Gelen İletişim Mesajları </span>
                        <h2 class="font-bold">@Model.NewContactCount</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="widget-head-color-box navy-bg p-lg text-center">
                <div class="m-b-md">
                    <h2 class="font-bold no-margins">
                        @Model.UserViewModel.NameSurname
                    </h2>
                    <small>@Model.UserViewModel.Username</small>
                </div>
                <img src="~/images/@Model.UserViewModel.ImageUrl" class="rounded-circle circle-border m-b-md" style="width: 100px;" alt="profile">

            </div>
            <div class="widget style1 blue-bg">
                <h4 class="media-heading">Hakkımda</h4>
                <p>@Model.UserViewModel.Username</p>
                <div class="text-right">
                    <a href="" class="btn btn-xs btn-primary"><i class="fa fa-heart"></i> Hakkındayı değiştir</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="widget lazur-bg no-padding">
                <div class="p-m">
                    <h1 class="m-xs">Son Eklenen Blog</h1>

                    <h3 class="font-bold mt-3">
                        @Model.LastBlogViewModel.Title
                    </h3>

                    <a href="/Blog/GetById/@Model.LastBlogViewModel.Id" class="btn btn-primary mt-3">Bloga git</a>
                </div>
                <div class="flot-chart">
                    <div class="flot-chart-content" id="flot-chart2"></div>
                </div>
            </div>
        </div>
        <div class="widget style1 yellow-bg col-lg-4">
            <div class="row">
                <div class="col-4">
                    <img src="@Model.WeatherAppViewModel.WeatherObjects[0].Icon"
                         class="rounded-circle m-b-md"
                         style="width: 100px;" alt="weatherIcon">

                </div>
                <div class="col-8 text-right">
                    <span> İstanbul </span>
                    <h2 class="font-bold">@Model.WeatherAppViewModel.TemperatureObject.Temperature °C</h2>
                </div>
            </div>
        </div>
    </div>
</div>

