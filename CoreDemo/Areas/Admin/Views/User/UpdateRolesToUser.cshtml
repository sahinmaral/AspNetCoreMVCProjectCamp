@model UserRoleViewModel

@{
    ViewBag.Title = ViewLocalizer["Title"];
    Layout = "_AdminLayout";
}

<form asp-action="@nameof(CoreDemo.Areas.Admin.Controllers.UserController.UpdateRolesToUser)"
      asp-area="@nameof(CoreDemo.Areas.Admin)"
      asp-controller="@nameof(CoreDemo.Areas.Admin.Controllers.UserController).Replace("Controller","")"
      method="post">
    <input type="hidden" value="@Model.UserViewModel.Username" asp-for="UserViewModel.Username" />

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">@ViewLocalizer["MainTitle", Model.UserViewModel.Username]</h2>

                @Html.DropDownListFor(x => x.RoleViewModel.RoleName, (List<SelectListItem>)ViewData["Roles"], new { @class = "form-control" })

                <button type="submit" class="btn btn-gradient-primary mr-2 w-100 mt-3" style="height:40px">@ViewLocalizer["Submit"]</button>

            </div>
        </div>
    </div>
</form>
