@model UserRoleViewModel

@{
    ViewBag.Title = ViewLocalizer["Title"];
    Layout = "_AdminLayout";
}

<form asp-action="UpdateRolesToUser" asp-area="Admin" asp-controller="User" method="post">
    <input type="hidden" value="@Model.UserViewModel.UserId" asp-for="UserViewModel.UserId"/>

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">@ViewLocalizer["MainTitle", Model.UserViewModel.Username]</h2>
                @for (int i = 0; i < Model.RoleViewModels.Count; i++)
                {
                    <div class="form-check">
                        <input type="hidden" value="@Model.RoleViewModels[i].RoleName" asp-for="RoleViewModels[i].RoleName" />

                        <input type="checkbox" class="form-check-input" style="width:20px; height:20px" asp-for="RoleViewModels[i].IsInRole" />
                        <span style="font-size:20px">
                            <input
                                asp-for="@Model.RoleViewModels[i].RoleName" 
                                style="border:0px; margin-left:10px; background-color:white" 
                                disabled="disabled"  />
                        </span>
                    </div>
                }


                <button type="submit" class="btn btn-gradient-primary mr-2 w-100 mt-3" style="height:40px">@ViewLocalizer["Submit"]</button>

            </div>
        </div>
    </div>
</form>
