@model CreateMessageViewModel

@{
    ViewData["Title"] = ViewLocalizer["Title"];
    Layout = "_WriterLayout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title" style="margin-bottom:3em">@ViewLocalizer["SubTitle",@Model.Receiver.Username]</h3>
            @using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
            {
                @Html.HiddenFor(x => x.Receiver.UserId)
                @Html.HiddenFor(x => x.Sender.UserId)

                <div class="form-group">
                    @Html.LabelFor(x=>x.Receiver.Username,ViewLocalizer["ReceiverUsername"].Value)
                    @Html.TextBoxFor(x => x.Receiver.Username, new { @class = "form-control", style = "border:1px solid black", disabled = "true" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(x=>x.MessageSubject,ViewLocalizer["MessageSubject"].Value)
                    @Html.TextBoxFor(x => x.MessageSubject, new { @class = "form-control", style = "border:1px solid black", placeholder = "", rows = "4" })
                    @Html.ValidationMessageFor(x => x.MessageSubject, "", new { style = "color:darkred" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(x=>x.MessageDetail,ViewLocalizer["MessageContent"].Value)
                    @Html.TextAreaFor(x => x.MessageDetail, new { @class = "form-control", style = "border:1px solid black", placeholder = "", rows = "4" })
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">@ViewLocalizer["Submit"]</button>
            //TODO : Emin misiniz seklinde alert gonderebiliriz.
            }
        </div>
    </div>
</div>

