@model CreateMessageViewModel

@{
    ViewData["Title"] = ViewLocalizer["Title"];
    Layout = "_WriterLayout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 style="margin-bottom:2em; font-size:20px">@ViewLocalizer["SubTitle",@Model.Receiver.Username]</h3>
            <form method="post"
                  asp-area="@nameof(CoreDemo.Areas.Writer)"
                  asp-action="@nameof(CoreDemo.Areas.Writer.Controllers.MessageController.SendMessage)"
                  asp-controller="@nameof(CoreDemo.Areas.Writer.Controllers.MessageController).Replace("Controller","")">

                <input type="hidden" asp-for="Receiver.Id" value="@Model.Receiver.Id" />
                <input type="hidden" asp-for="Sender.Id" value="@Model.Sender.Id" />

                <div class="form-group">
                    <label asp-for="Receiver.Username">@ViewLocalizer["ReceiverUsername"]</label>
                    <input type="text" asp-for="Receiver.Username" class="form-control" disabled="disabled"/>
                </div>

                <div class="form-group">
                    <label asp-for="Subject">@ViewLocalizer["MessageSubject"]</label>
                    <input type="text" asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="validation-span"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Detail">@ViewLocalizer["MessageContent"]</label>
                    <textarea asp-for="Detail" class="ckeditor" id="messageContentForm"></textarea>
                    <span asp-validation-for="Subject" class="validation-span"></span>
                </div>

                <button type="submit" class="btn btn-gradient-primary mr-2">@ViewLocalizer["Submit"]</button>
                <button type="reset" class="btn btn-light mr-2">@ViewLocalizer["Discard"]</button>
              
              </form>


        </div>
    </div>
</div>

<script>

    CKEDITOR.replace('messageContentForm',
        {
            toolbar: 'Basic',
            uiColor: '#9AB8F3'
        });
</script>