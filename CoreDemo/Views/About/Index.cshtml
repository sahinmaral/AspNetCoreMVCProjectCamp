@model ReadAboutViewModel

@{
    Layout = "_UserLayout";
    ViewData["Title"] = ViewLocalizer["MainTitle"];
}


<h3 class="tittle">@ViewLocalizer["MainTitle"]</h3>
<div class="row inner-sec">
    <!--left-->
    <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
        <div class="blog-grid-top">

            <div class="blog_info_left_grid">
                <img src="@Model.ImageUrl" class="img-fluid" alt="AboutImage">
            </div>
            <h3>
                @ViewLocalizer["HeaderTitle"]
            </h3>
            <p>
                @Html.Raw(Model.Detail)
            </p>
        </div>

    </div>
    <!--//left-->
    <!--right-->
    <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
        <div class="right-blog-info text-left">
            <div class="tech-btm widget_social">
                @await Component.InvokeAsync(nameof(CoreDemo.ViewComponents.AboutSocialMediaViewComponent).Replace("ViewComponent",""))
            </div>
        </div>

    </aside>
    <!--//right-->
</div>