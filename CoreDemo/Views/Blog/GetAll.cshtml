@model List<ReadBlogViewModel>

@{
    ViewData["Title"] = "Bloglar";
    Layout = "_UserLayout";
}

@{
	string CheckBlogContent(string content)
	{
		if (content != null && content.Length > 50)
		{
			return content.Substring(0, 50) + " ...";
		}

		return content;
	}
}

<h3 class="tittle">Blog Postları</h3>
			<div class="inner-sec">
				<div class="left-blog-info-w3layouts-agileits text-left">
					<div class="row">
						@foreach (ReadBlogViewModel blog in Model)
						{
							<div class="col-lg-4 card">
								<a href="single.html">
									<img src="@blog.BlogThumbnailImage" class="card-img-top img-fluid" alt="">
								</a>
								<div class="card-body">
									<ul class="blog-icons my-4">
										<li>
                                            <a href="GetById/@blog.BlogId">
												<i class="far fa-calendar-alt"></i>@blog.BlogCreateDate</a>
										</li>
										<li class="mx-2">
											<a href="GetById/@blog.BlogId">
                                                <i class="far fa-comment"></i>@blog.CommentViewModels.Count</a>
										</li>
										<li>
                                            <a href="GetById/@blog.BlogId">
												<i class="fas fa-eye"></i>@blog.CategoryViewModel.CategoryName</a>
										</li>

									</ul>
									<h5 class="card-title">
										<a href="single.html">@blog.BlogTitle</a>
									</h5>
									<p class="card-text mb-3">
										@CheckBlogContent(blog.BlogContent)
									</p>
									<a href="GetById/@blog.BlogId" class="btn btn-primary read-m">Daha Fazlası </a>
								</div>
							</div>
						}
						</div>
					<!--//left-->
				</div>
			</div>

