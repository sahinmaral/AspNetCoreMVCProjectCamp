                    @await Component.InvokeAsync("CommentListByBlogId", new { id = Model.BlogId })

                </div>
            </div>

        </div>
        <div class="comment-top">

            @await Html.PartialAsync("../Blog/AddComment", new CreateCommentViewModel()
            {
            BlogId = Model.BlogId
            })
