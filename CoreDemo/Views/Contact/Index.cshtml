<div class="container">
    <div class="contact_grid_right">
        @using (Html.BeginForm("AddContact", "Contact", FormMethod.Post))
        {
            <div class="row contact_left_grid">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(x=>x.NameSurname , @Localizer["NameSurnameForm"].Value)
                        @Html.TextBoxFor(x=>x.NameSurname , new {@class="form-control border border-dark"})
                        @Html.ValidationMessageFor(x => x.NameSurname, "", new { @style = "font-weight: bold; color: darkred;" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x=>x.Email , @Localizer["Email"].Value)
                        @Html.TextBoxFor(x=>x.Email , new {@class="form-control border border-dark"})
                        @Html.ValidationMessageFor(x => x.Email, "", new { @style = "font-weight: bold; color: darkred;" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x=>x.Subject , @Localizer["SubjectForm"].Value)
                        @Html.TextBoxFor(x=>x.Subject , new {@class="form-control border border-dark"})
                        @Html.ValidationMessageFor(x => x.Subject, "", new { @style = "font-weight: bold; color: darkred;" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(x=>x.Message , @Localizer["MessageForm"].Value)
                        @Html.TextAreaFor(x => x.Message, new { @class = "border border-dark" })
                        @Html.ValidationMessageFor(x => x.Message, "", new { @style = "font-weight: bold; color: darkred;" })
                    </div>
                    <input class="form-control" type="submit" value=@Localizer["SubmitContactForm"]>

                </div>
            </div>
        }


    </div>
</div>

<script>
    window.onload = function () {
    @Html.Raw(TempData["Message"])
        }
</script>