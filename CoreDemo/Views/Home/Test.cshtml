@model List<Entities.Concrete.Category>

@{
    ViewData["Title"] = "Test";
    Layout = "_Layout";
    
    string ChangeCategoryStatus(bool status)
    {
        if (status) return "Aktif";
        else return "Pasif";
    }
}



<h1>Test</h1>
<h3>Burası kendi oluşturduğumuz view sayfasıdır</h3>

<table class="table">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Kategori adı</th>
        <th scope="col">Kategori açıklaması</th>
        <th scope="col">Kategori durumu</th>
    </tr>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.CategoryId</td>
            <td>@category.CategoryName</td>
            <td>@category.CategoryDescription</td>
            <td>@ChangeCategoryStatus(category.CategoryStatus)</td>
        </tr>  
    }
    
</table>