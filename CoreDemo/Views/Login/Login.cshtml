@model UserSignInViewModel

@{
    Layout = "_UserLayout";
    ViewData["Title"] = "Giriş Yap";

}


<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Giriş Yap</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(x=>x.Username , "Kullanici adi")
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Kullanıcı adı" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x=>x.Password , "Sifre")
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Şifre" })
                    </div>

                    <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                    <p><a href="/Register/RegisterUser"> Hesabınız yok mu?</a></p>
                }

            </div>
        </div>
    </div>
</section>

<script>

    window.onload = function() {
        var message = "@((string)ViewData["LoginError"])";
        if (message !== "" && message !== null) {
            swal("Uyarı",message);
        }
    }

</script>