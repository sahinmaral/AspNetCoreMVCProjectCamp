@using Microsoft.AspNetCore.Mvc.Localization
@model UserSignInViewModel

@inject IViewLocalizer Localizer

@{
    Layout = "_UserLayout";
    ViewData["Title"] = Localizer["Login"];

}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">@Localizer["Login"]</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    <div class="form-group">
                        @Html.LabelFor(x=>x.Username , @Localizer["Username"].Value)
                        @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = @Localizer["Username"].Value })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x=>x.Password , @Localizer["Password"].Value)
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = @Localizer["Password"].Value })
                    </div>

                    <button type="submit" class="btn btn-primary submit mb-4">@Localizer["Login"]</button>
                    <p><a href="/Register/RegisterUser"> @Localizer["NoAccount"]</a></p>
                }

            </div>
        </div>
    </div>
</section>

<script>

    window.onload = function() {
        var message = "@((string)ViewData["LoginError"])";
        if (message !== "" && message !== null) {
            swal("Uyarı",message);
        }
    }

</script>