@model List<ReadBlogViewModel>

@{
    Layout = null;
}

<h3>Son Postlar</h3>

@foreach (ReadBlogViewModel blog in Model)
{
    <div class="blog-grids row mb-3">
        <div class="col-md-5 blog-grid-left">
            <a href="/Blog/GetById/@blog.BlogId">
                <img src="~/images/@blog.BlogThumbnailImage" class="card-img-top img-fluid" alt="">
            </a>
        </div>
        <div class="col-md-7 blog-grid-right">
            <h5>
                <a href="/Blog/GetById/@blog.BlogId">@blog.BlogTitle</a>
            </h5>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"></i> @blog.BlogCreateDate</span>
            </div>
        </div>

    </div>
}



