@model List<ReadBlogViewModel>

@if(Model.Count != 0){
    <h4>@ViewLocalizer["Title"]</h4>
}


@foreach (ReadBlogViewModel blog in Model)
{
    <div class="blog-grids row mb-3">
        <div class="col-md-5 blog-grid-left">
            <a href="/Blog/GetById/@blog.Id">
                <img src="@blog.ThumbnailImage" class="card-img-top img-fluid" alt="">
            </a>
        </div>
        <div class="col-md-7 blog-grid-right">
            <h5>
                <a href="/Blog/GetById/@blog.Id">@blog.Title</a>
            </h5>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"></i> @blog.CreatedAt
                </span>
            </div>
        </div>

    </div>
}


