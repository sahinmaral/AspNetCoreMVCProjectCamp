@model CoreDemo.Models.ReadUserViewModel

@inject IStringLocalizer<UserLayoutController> Localizer

<div class="col-md-4 top-forms mt-lg-3 mt-md-1 mt-0 d-flex">
    <span>@Localizer["Welcome"] </span>
    <div class="mx-lg-4 mx-md-2 mx-1">
        @if (Model.Username == null)
        {
            <a href="/@nameof(UserController).Replace("Controller", "")/@nameof(UserController.Login)" style="color:gray">
                <i class="fas fa-lock"></i> @Localizer["Login"]
            </a>
        }
        else
        {
            <ul class="blog-icons">
                <li class="nav-item dropdown">
                    <a class="dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user"></i>@Model.Username
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="dropdown-item" href="/Admin/Category/GetCategories">@Localizer["AdminPanel"]</a>
                        }

                        @if (User.IsInRole("Writer"))
                        {
                            <a class="dropdown-item" href="/Writer/Home/Homepage">@Localizer["WriterPanel"]</a>
                        }

                    </div>
                </li>
            </ul>
        }
    </div>
    <span>
        @if (Model.Username == null)
        {
            <a href="/@nameof(UserController).Replace("Controller", "")/@nameof(UserController.Register)">
                <i class="far fa-user"></i> @Localizer["Signup"]
            </a>
        }
        else
        {
            <a href="/@nameof(UserController).Replace("Controller", "")/@nameof(UserController.LogOut)">
                <i class="fas fa-sign-out-alt"></i> @Localizer["Logout"]
            </a>
        }
    </span>
</div>