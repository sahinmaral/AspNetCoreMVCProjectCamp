@using Entities.Concrete
@model System.Collections.Generic.List<Entities.Concrete.Notification>

<a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-toggle="dropdown">
    <i class="mdi mdi-bell-outline"></i>
    @*<span class="count-symbol bg-danger"></span>*@
</a>
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <h6 class="p-3 mb-0">Bildirimler</h6>

    @foreach (Notification notification in Model)
    {
        <a class="dropdown-item preview-item">
            <div class="preview-thumbnail">
                <div class="@notification.NotificationType.NotificationTypeName">
                    <i class="@notification.NotificationSymbol.SymbolName"></i>
                </div>
            </div>
            <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                <h6 class="preview-subject font-weight-normal mb-1">@notification.NotificationHeader</h6>
                <p class="text-gray ellipsis mb-0">@notification.NotificationDetail</p>
            </div>
        </a>
    }

    <h6 class="p-3 mb-0 text-center"><a style="text-decoration: none; color:black" href="#">Bütün bildirimleri göster</a></h6>
</div>