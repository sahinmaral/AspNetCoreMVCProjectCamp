@model List<CategoryAndBlogCountViewModel>

<div class="tech-btm">
    @if(Model.Count != 0){
        <h4>@ViewLocalizer["Title"]</h4>
    }
    
    <ul class="list-group single">

        @foreach (CategoryAndBlogCountViewModel viewModel in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="/@nameof(CoreDemo.Controllers.BlogController).Replace("Controller","")/@nameof(CoreDemo.Controllers.BlogController.GetAllByCategorySlug)/@viewModel.CategoryViewModel.Slug">@viewModel.CategoryViewModel.Name</a>
                <span class="badge badge-primary badge-pill">@viewModel.BlogCount</span>
            </li>
        }


    </ul>
</div>