@using Microsoft.Extensions.Options

@inject IOptions<Microsoft.AspNetCore.Builder.RequestLocalizationOptions> LocOptions

@{
    Layout = null;

    var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "~/" : $"~{Context.Request.Path.Value}";

    var culture = Context.Features.Get<IRequestCultureFeature>();
    var cultureList = LocOptions.Value.SupportedUICultures.Select(x => new SelectListItem { Value = x.Name, Text = x.Name }).ToList();
}

<!DOCTYPE html>
<html>

<head>
    <title>@ViewData["Title"] | ASP.NET Core MVC</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="Weblog a Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <link href="~/weblogTemplate/web/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link rel="stylesheet" href="~/weblogTemplate/web/css/single.css">
    <link href="~/weblogTemplate/web/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/lib/toastr/toastr.min.css" rel='stylesheet' type='text/css' />
    <link href="~/weblogTemplate/web/css/fontawesome-all.css" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800"
          rel="stylesheet">
</head>

<body>
    <!--Header-->



    <header>
        <div class="top-bar_sub_w3layouts container-fluid">
            <div class="row">
                <div class="col-md-4 logo text-left">
                    <a class="navbar-brand" href="/Blog/GetAll">
                        <i class="fab fa-linode"></i> ASP.NET Core 5.0 Kampı
                    </a>
                </div>

                @await Component.InvokeAsync("LoginRegisterNavbar")

                <!-- social media -->
                <div class="col-md-4 log-icons text-right">

                    @*                    <form asp-action="SetLanguage" asp-controller="UserLayout">

                        <input type="hidden" name="returnUrl" value=@returnUrl />

                        <select name="culture">
                            <option value="tr-TR">TR</option>
                            <option value="en-US">EN</option>
                        </select>
                    </form>*@
                    
                    <form asp-action="SetLanguage" asp-controller="UserLayout" method="post" 
                          asp-route-returnUrl="@returnUrl">
                        <select name="culture" 
                                asp-for="@culture.RequestCulture.UICulture.Name"
                                asp-items="cultureList"
                                onchange="this.form.submit();">

                        </select>
                    </form>

                </div>
                <!-- //social media -->

            </div>
        </div>

        <div class="header_top" id="home">

            @await Html.PartialAsync("../UserLayout/NavbarPartialView")

        </div>
    </header>
    <!--//header-->
    <!--/main-->
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            @RenderBody()
        </div>
    </section>
    <!--//main-->
    <!--footer-->
    @await Html.PartialAsync("../UserLayout/FooterPartialView")
    <!-- //footer -->
    <!---->
    <!-- js -->
    <script src="~/weblogTemplate/web/js/jquery-2.2.3.min.js"></script>
    <!-- //js -->
    <!--/ start-smoth-scrolling -->
    <script src="~/weblogTemplate/web/js/move-top.js"></script>
    <script src="~/weblogTemplate/web/js/easing.js"></script>
    <script>
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({
                    scrollTop: $(this.hash).offset().top
                }, 900);
            });
        });
    </script>
    <!--// end-smoth-scrolling -->

    <script>
        $(document).ready(function () {
            /*
                                    var defaults = {
                                            containerID: 'toTop', // fading element id
                                        containerHoverID: 'toTopHover', // fading element hover id
                                        scrollSpeed: 1200,
                                        easingType: 'linear'
                                        };
                                    */

            $().UItoTop({
                easingType: 'easeOutQuart'
            });

        });
    </script>
    <a href="#home" class="scroll" id="toTop" style="display: block;">
        <span id="toTopHover" style="opacity: 1;"> </span>
    </a>

    <!-- //Custom-JavaScript-File-Links -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/sweetalert/dist/sweetalert.min.js"></script>
    <script src="~/lib/toastr/toastr.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/site.js" type="text/javascript"></script>

</body>

</html>

<script>

    window.onload = function () {
    @Html.Raw(TempData["Message"])
            }

</script>
