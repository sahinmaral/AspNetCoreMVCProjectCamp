
@model UserSignInViewModel


@{
    Layout = "_UserLayout";
    ViewData["Title"] = ViewLocalizer["Login"];

}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">@ViewLocalizer["Login"]</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form method="post" asp-action="@nameof(UserController.Login)" asp-controller="@nameof(UserController).Replace("Controller", "")">
                    <div class="form-group">
                        <label asp-for="Username">@ViewLocalizer["Username"]</label>
                        <input type="text" asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" style="color:darkred;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">@ViewLocalizer["Username"]</label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" style="color:darkred;"></span>
                    </div>

                    <button type="submit" class="btn btn-primary submit mb-4">@ViewLocalizer["Login"]</button>
                </form>

                <p><a href="/User/Register"> @ViewLocalizer["NoAccount"]</a></p>

            </div>
        </div>
    </div>
</section>

