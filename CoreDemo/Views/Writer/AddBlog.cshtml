@model CreateBlogViewModel

@{
    ViewData["Title"] = "Yeni Blog Ekleme";
    Layout = "_WriterLayout";
}


 <div class="col-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title" style="margin-bottom:3em">Yeni Blog Oluştur</h4>
                   @using (Html.BeginForm("AddBlog","Writer",FormMethod.Post))
                   {
                     <div class="form-group">
                       <label>Başlık</label>
                       @Html.TextBoxFor(x=>x.BlogTitle , new {@class="form-control" , style="border:1px solid black" , placeholder = "Başlık" })
                       @Html.ValidationMessageFor(x=>x.BlogTitle , "" , new {style="color:darkred"})
                     </div>

                     <div class="form-group">
                       <label for="exampleTextarea1">İçerik</label>
                       @Html.TextAreaFor(x=>x.BlogContent , new {@class="form-control" , style="border:1px solid black" , placeholder = "İçerik" , rows="4" })
                        @Html.ValidationMessageFor(x=>x.BlogContent , "" , new {style="color:darkred"})
                     </div>
                     <div class="form-group">
                       <label>Kategori</label>
                       @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewData["Categories"], new { @class = "form-control" , style = "border:1px solid black"})
                     </div>
                     <div class="form-group">
                       <label>Kapak resmi</label>
                       <input type="file" name="img[]" class="file-upload-default">
                       <div class="input-group col-xs-12">
                         <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                         <span class="input-group-append">
                           <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                         </span>
                       </div>
                     </div>
                     <div class="form-group">
                       <label>Ana resim</label>
                       <input type="file" name="img[]" class="file-upload-default">
                       <div class="input-group col-xs-12">
                         <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                         <span class="input-group-append">
                           <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload</button>
                         </span>
                       </div>
                     </div>
                     <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                      <button class="btn btn-light">İptal Et</button>
                   }
                  </div>
                </div>
              </div>