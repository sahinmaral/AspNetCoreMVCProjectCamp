@model List<ReadBlogViewModel>

@{
    ViewData["Title"] = "Bloglarım";
    Layout = "_WriterLayout";
}

@{
    string SubStringBlogContent(string content)
    {
        if (content.Length < 15)
        {
            return content;
        }

        return content.Substring(15) + "...";
    }
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Bloglarım</h4>
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th> # </th>
                    <th> Başlık </th>
                    <th> Kategori Adı </th>
                    <th> İçerik </th>
                    <th> Oluşturulma Tarihi </th>
                    <th> Durum </th>
                    <th> Sil </th>
                    <th> Düzenle </th>
                </tr>
                </thead>
                <tbody>
                @foreach (ReadBlogViewModel blog in Model)
                {
                    <tr>
                        <td> @blog.BlogId </td>
                        <td> @blog.BlogTitle </td>
                        <td> @blog.CategoryViewModel.CategoryName </td>
                        <td> @SubStringBlogContent(blog.BlogContent) </td>
                        <td> @blog.BlogCreateDate </td>
                        <td> @blog.BlogStatus </td>
                        <td> <a href="#" class="btn btn-danger">Sil</a> </td>
                        <td> <a href="#" class="btn btn-warning">Düzenle</a> </td>
                    </tr>
                }
                </tbody>
            </table>
            <a href="/Writer/AddBlog" class="btn btn-primary">Yeni Blog Oluştur</a>
        </div>
    </div>
</div>