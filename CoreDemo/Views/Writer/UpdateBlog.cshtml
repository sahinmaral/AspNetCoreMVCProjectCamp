@model UpdateBlogViewModel

@{
    ViewData["Title"] = @Model.BlogTitle + " adlı blogu düzenleme";
    Layout = "_WriterLayout";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="margin-bottom:3em">Yeni Blog Oluştur</h4>
            @using (Html.BeginForm("UpdateBlog", "Writer", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(x=>x.BlogId)
                @Html.HiddenFor(x=>x.BlogStatus)

                <div class="form-group">
                    <label>Başlık</label>
                    @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control", style = "border:1px solid black", placeholder = "Başlık" })
                    @Html.ValidationMessageFor(x => x.BlogTitle, "", new { style = "color:darkred" })
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">İçerik</label>
                    @Html.TextAreaFor(x => x.BlogContent, new { @class = "form-control", style = "border:1px solid black", placeholder = "İçerik", rows = "4" })
                    @Html.ValidationMessageFor(x => x.BlogContent, "", new { style = "color:darkred" })
                </div>
                <div class="form-group">
                    <label>Kategori</label>
                    @Html.DropDownListFor(x => x.CategoryViewModel.CategoryId, (List<SelectListItem>)ViewData["Categories"], new { @class = "form-control", style = "border:1px solid black" })
                </div>
                <div class="form-group">
                    <label>Kapak resmi</label>
                    <input type="file" class="form-control" name="BlogThumbnailImage" />
                    @Html.ValidationMessageFor(x => x.BlogThumbnailImage, "", new { style = "color:darkred" })
                </div>
                <div class="form-group">
                    <label>Ana resim</label>
                    <input type="file" class="form-control" name="BlogMainImage" />
                    @Html.ValidationMessageFor(x => x.BlogMainImage, "", new { style = "color:darkred" })
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
                <button class="btn btn-light">İptal Et</button>
            }
        </div>
    </div>
</div>